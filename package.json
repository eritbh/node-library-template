{
  "name": "node-library-template",
  "version": "1.0.0",
  "description": "Template for Node library projects",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "docs": "typedoc src --out docs/docs --theme minimal",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "test": "ava",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "repository": "eritbh/node-library-template",
  "bugs": {
    "url": "https://github.com/eritbh/node-library-template/issues"
  },
  "keywords": [],
  "author": "eritbh <erin20913@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@eritbh/eslint-config-typescript": "^1.0.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^16.11.6",
    "ava": "^3.15.0",
    "eslint": "^8.1.0",
    "rollup": "^2.59.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.7",
    "typescript": "^4.4.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
